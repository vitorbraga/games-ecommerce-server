        "@types/dotenv": "^8.2.0",
        "@types/email-templates": "^6.0.0",
        "@types/express": "^4.17.6",
        "@types/helmet": "0.0.45",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/mocha": "^7.0.2",
        "@types/multer": "^1.4.4",
        "@types/multer-s3": "^2.7.8",
        "@types/node": "^8.0.29",
        "@types/nodemailer": "^6.2.2",
        "@types/sharp": "^0.25.1",
        "@types/sinon": "^9.0.4",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^3.4.6",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "chai": "^4.2.0",
        "cross-env": "^7.0.2",
        "eslint": "^6.7.1",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prefer-arrow": "^1.1.6",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^7.2.0",
        "node-mocks-http": "^1.9.0",
        "nyc": "^15.1.0",
        "sinon": "^9.0.3",
        "supertest": "^4.0.2",
        "ts-node": "3.3.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "argon2": "^0.27.0",
        "aws-sdk": "^2.767.0",
        "body-parser": "^1.18.1",
        "class-validator": "^0.10.2",
        "cors": "^2.8.5",
        "dinero.js": "^1.8.1",
        "dotenv": "^8.2.0",
        "email-templates": "^7.1.1",
        "express": "^4.17.1",
        "helmet": "^3.21.2",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.2",
        "multer-s3": "^2.9.0",
        "nodemailer": "^6.3.1",
        "pg": "^8.3.3",
        "pm2": "^5.2.0",
        "pug": "^3.0.1",
        "reflect-metadata": "^0.1.10",
        "ts-node-dev": "^1.0.0-pre.43",
        "tsc": "^1.20150623.0",
        "typeorm": "0.2.26",
        "uuid": "^3.3.3"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": "src",
        "exclude": [
            "**/*.d.ts",
            "**/*.js",
            "src/utils/email-templates.ts",
            "src/migration/*.ts"
        ],
        "reporter": [
            "lcov"
        ],
        "all": true
    },
    "scripts": {
        "tsc": "tsc",
        "lint": "eslint \"src/**/*.ts\"",
        "build": "rimraf build/ && npm run lint && tsc",
        "start:dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
        "start:prod": "node ./build/index.js",
        "start": "pm2-runtime start ecosystem.config.js --env production",
        "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "test": "cross-env mocha --config=test/.mocharc.json --timeout 12000 --exit",
        "test:coverage": "cross-env nyc mocha --config=test/.mocharc.json --timeout 12000 --exit"
    },
    "engines": {
        "node": "14.x"
    }
}

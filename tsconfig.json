{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "moduleResolution": "node",
        "outDir": "build",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*", "test/**/*"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}